<%- include('partials/header'); -%> 


<div class="body-content container">
    <h1>Compose</h1>

    <form action="/" method="post">
        <div class="form-group">
          <label for="blogTitle">Title</label>
          <input type="text" name="Title" class="form-control" id="blogTitle" aria-describedby="emailHelp" placeholder="My Blog">
        </div>
        <div class="form-group">
          <label for="textContent">Your Thoughts</label>
          <textarea name="Content" class="form-control" id="textContent" rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>
    

<%- include('partials/footer'); -%> 

</html>